rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles - new flattened structure (Phase 2)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Profile migration status
      match /migrations/{migrationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Old nested profile path (for backward compatibility during migration)
      match /profile/data {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Legacy user tasks - for migration only
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Legacy user settings - for migration only
    match /users/{userId}/settings/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Households
    match /households/{householdId} {
      // Any authenticated user can read (needed for invite code lookup)
      allow read: if request.auth != null;

      // Any authenticated user can create new household
      allow create: if request.auth != null;

      // Existing members can update their household
      allow update: if request.auth != null &&
                       request.auth.uid in resource.data.memberUids;

      // Non-members can update to join (add themselves to memberUids via invite code)
      allow update: if request.auth != null &&
                       !(request.auth.uid in resource.data.memberUids) &&
                       request.auth.uid in request.resource.data.memberUids &&
                       request.resource.data.memberUids.size() == resource.data.memberUids.size() + 1;

      // Admin can delete household
      allow delete: if request.auth != null &&
                       request.auth.uid == resource.data.adminUid;

      // Household members subcollection
      match /members/{memberId} {
        // Members can read
        allow read: if request.auth != null &&
                       request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.memberUids;

        // Can create if: creating your own member doc OR you're already a member (for admins adding local members)
        allow create: if request.auth != null && (
                         memberId == request.auth.uid ||
                         request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.memberUids
                       );

        // Members can update/delete member docs
        allow update, delete: if request.auth != null &&
                                 request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.memberUids;
      }

      // Household tasks
      match /tasks/{taskId} {
        allow read, write: if request.auth != null &&
                              request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.memberUids;
      }

      // Household settings
      match /settings/{document=**} {
        allow read, write: if request.auth != null &&
                              request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.memberUids;
      }

      // Household rooms (Phase 1)
      match /rooms/{roomId} {
        allow read, write: if request.auth != null &&
                              request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.memberUids;
      }

      // Household migration status
      match /migrations/{migrationId} {
        allow read, write: if request.auth != null &&
                              request.auth.uid in get(/databases/$(database)/documents/households/$(householdId)).data.memberUids;
      }
    }
  }
}
